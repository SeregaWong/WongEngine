{
    "compilerOptions": {
      "target": "ES2020",
      "module": "AMD",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outFile": "./dist/index.js",
      "strict": true,
      "lib": [
          "DOM",
          "ES2015",
          "ES5",
          "ES6",
          "ES7"
      ]
    },
    "include": ["./src/**/*/"]
}